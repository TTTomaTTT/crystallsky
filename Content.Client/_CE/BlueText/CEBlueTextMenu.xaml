<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      Title="{Loc 'ce-bluetext-ui-window-title'}"
                      MinSize="300 200"
                      SetSize="420 460">
    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True"
                  VerticalExpand="True">
        <RichTextLabel Margin="12" StyleClasses="highlight" HorizontalAlignment="Center" Text="{Loc 'ce-bluetext-ui-window-guide'}"/>
        <PanelContainer VerticalExpand="True" Margin="10 10 10 10">
            <PanelContainer.PanelOverride>
                <graphics:StyleBoxFlat BackgroundColor="#1B1B1E"/>
            </PanelContainer.PanelOverride>
            <BoxContainer Orientation="Vertical"
                          HorizontalExpand="True"
                          VerticalExpand="True">
                <TextEdit Name="BlueTextInput"
                          HorizontalExpand="True"
                          VerticalExpand="True"
                          Access="Public" />
                <Label Name="CharCountLabel"
                       Margin="4"
                       HorizontalAlignment="Right"
                       Text="(0/1000)"
                    />
            </BoxContainer>
        </PanelContainer>
        <RichTextLabel Text = "{Loc 'ce-bluetext-ui-window-tip'}"
                       Margin="12"
                       HorizontalAlignment="Left"/>
        <Button Name="SubmitBlueText"
                Margin="12"
                StyleClasses="negative"
                Text="{Loc 'ce-bluetext-ui-submit'}" />
    </BoxContainer>
</controls:FancyWindow>
